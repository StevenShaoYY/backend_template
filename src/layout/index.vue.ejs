  }

  .fixed-header {
    position: fixed;
    top: #{$micro_top};
    right: #{$micro_right};
    z-index: 9;
    width: calc(100% - #{$sideBarWidth} - #{$micro_left} - #{$micro_right});
    transition: width 0.28s;
  }

  .hideSidebar .fixed-header {
    width: calc(100% - 54px - #{$micro_left} - #{$micro_right})
  }

  .mobile .fixed-header {
    width: 100%;
  }
</style>
